ul.nav-list
  li.dropdown.nav-list_item
    = link_to '#', class: 'nav-list_link px-2 dropdown-toggle text-dark',
                   data: {"bs-toggle": 'dropdown'} do
      = image_tag  "#{locale}.png" , class: 'flag'
    ul.dropdown-menu
      - I18n.available_locales.each do |locale|
        li
          - if I18n.locale == locale
            = tag.span t(locale), class: 'dropdown-item'
          - else
            = link_to t(locale), root_path(locale: locale),
                                  class: 'dropdown-item'
  li.nav-list_item
    = link_to t('.home'), root_path, class: 'nav-list_link'
  li.nav-list_item
    = link_to  t('.all_publication'), posts_path, class: 'nav-list_link'

